<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="TitleMain" TargetType="TextBlock">
        <Setter Property="FontSize" Value="36"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{StaticResource Main}"/>
    </Style>
    <Style x:Key="TitleMainTransparent" TargetType="TextBlock" BasedOn="{StaticResource TitleMain}">
        <Setter Property="Foreground" Value="{StaticResource MainBackground}"/>
    </Style>
    <Style x:Key="SubTitleMain" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Foreground" Value="{StaticResource Main}"/>
    </Style>
    <Style x:Key="SubTitleMainTransparent" TargetType="TextBlock" BasedOn="{StaticResource SubTitleMain}">
        <Setter Property="Foreground" Value="{StaticResource MainBackground}"/>
    </Style>
    <Style x:Key="TextBoxTooltip" TargetType="TextBlock" BasedOn="{StaticResource SubTitleMain}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Opacity" Value="0.5"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="TextAlignment" Value="Left"/>
    </Style>
</ResourceDictionary>