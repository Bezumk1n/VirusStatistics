<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="MainBackgroundColor">#f2f2f2</Color>
    <Color x:Key="FiguresColor">#4AB1B6</Color>
    <Color x:Key="MainColor">#3AA9AD</Color>
    <Color x:Key="MainColorSecondGradient">#3AADA1</Color>
    <Color x:Key="MainTextColor">DimGray</Color>
    <SolidColorBrush
     x:Key="MainBackground"
     Color="{StaticResource MainBackgroundColor}" />
    <SolidColorBrush
    x:Key="Figures"
    Color="{StaticResource FiguresColor}" />
    <SolidColorBrush
    x:Key="Main"
    Color="{StaticResource MainColor}" />
    <SolidColorBrush
    x:Key="MainSecondGradient"
    Color="{StaticResource MainColorSecondGradient}" />
    <SolidColorBrush
    x:Key="MainText"
    Color="{StaticResource MainTextColor}" />
</ResourceDictionary>